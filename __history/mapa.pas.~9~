unit mapa;

interface

uses
  main;

type
  TMapa = class(TObject)
  private

  public
    procedure CriarMapaNormal;

  end;

var

implementation

{ TMapa }

procedure TMapa.CriarMapaNormal;
var
  I,J: Integer;
begin
   for I := 1 to 10 do
   begin
      for J := 1 to 20 do
         GlobalMapa[I,J] := 0;
   end;
end;

end.
